<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal"
    android:background="@color/menuColor">

    <ImageView
        android:id="@+id/search_result_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/text_padding"
        android:paddingVertical="@dimen/edit_text_padding"
        android:scaleType="fitStart"
        android:src="@drawable/the_beatles" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|left"
            android:paddingLeft="@dimen/edit_text_padding"
            android:layout_weight="1"
            android:text="название песни"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/tiny_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:gravity="top|left"
                android:paddingLeft="@dimen/edit_text_padding"
                android:text="исполнитель"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/super_tiny_text_size"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="13dp"

                android:paddingLeft="@dimen/edit_text_padding"
                android:src="@drawable/dot"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:gravity="top|left"
                android:paddingLeft="@dimen/edit_text_padding"
                android:text="длительность"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/super_tiny_text_size"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/menuColor"
        android:src="@drawable/arrow_next"
        app:tint="@color/arrowNextColor"

        android:gravity=""/>

</LinearLayout>