<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/settings_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_back"
            android:tint="@color/menuItemsTextColor"
            android:backgroundTint="@color/menuColor"
            android:padding="@dimen/text_padding"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_padding"
            android:paddingEnd="@dimen/text_padding"
            android:paddingTop="@dimen/text_padding"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textColor="@color/menuItemsTextColor"
            android:paddingBottom="@dimen/text_padding"
            android:text="@string/button_search"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_search_heigth"
            android:layout_marginHorizontal="@dimen/text_padding"
            android:background="@drawable/rounded_edittext"
            android:drawableStart="@drawable/search_tiny"
            android:drawableTint="@color/editIconColor"
            android:fontFamily="@font/ys_display_regular"
            android:paddingHorizontal="@dimen/text_padding"
            android:text="@string/button_search"

            android:textColor="@color/editTextColor"
            android:textSize="@dimen/tiny_text_size" />
    </LinearLayout>

</LinearLayout>