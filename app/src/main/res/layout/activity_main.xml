<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"

    android:orientation="vertical"
    tools:context=".main.ui.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp16"
        android:paddingTop="@dimen/dp14"
        android:paddingBottom="@dimen/dp16"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="@color/backgroundTextColor"

        android:text="@string/app_name"/>

    <Button
        style="@style/main_activity_button_style"
        android:id="@+id/button_search"
        android:layout_marginTop="@dimen/dp24"
        android:layout_marginHorizontal="@dimen/dp16"
        android:text="@string/button_search"
        app:icon="@drawable/search"/>

    <Button
        style="@style/main_activity_button_style"
        android:id="@+id/button_lib"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginHorizontal="@dimen/dp16"
        android:text="@string/button_lib"
        app:icon="@drawable/lib"/>

    <Button
        style="@style/main_activity_button_style"
        android:id="@+id/button_settings"
        android:layout_marginBottom="@dimen/dp28"
        android:layout_marginHorizontal="@dimen/dp16"
        android:text="@string/button_settings"
        app:icon="@drawable/settings"/>

</LinearLayout>