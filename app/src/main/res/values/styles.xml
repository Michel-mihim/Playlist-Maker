<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_activity_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/buttonTextColor</item>
    </style>

    <style name="SettingsActivityMenuListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsActivityMenuItemIconStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/text_padding</item>

    </style>

    <style name="SettingsActivityMenuItemTextStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/menu_items_text_color</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:backgroundTint">@color/menuColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsActivityMenuItemThemeTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/menu_items_text_color</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:backgroundTint">@color/menuColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="arrow_back_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:tint">@color/menu_items_text_color</item>
        <item name="android:backgroundTint">@color/menuColor</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="menu_head_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/edit_text_padding</item>
        <item name="android:paddingEnd">@dimen/text_padding</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/menu_items_text_color</item>
        <item name="android:paddingBottom">@dimen/text_padding</item>

    </style>

</resources>